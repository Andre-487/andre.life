<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{{title}}</title>
        <meta charset="utf-8" />

        <link rel="stylesheet" href="assets/styles.css">
        <link rel="shortcut icon" href="assets/favicon.ico" type="image/vnd.microsoft.icon">
    </head>
    <body class="page">
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-41019930-2', 'auto');
            ga('send', 'pageview');
        </script>
        <section class="summary document-section">
            <header>
                <h1 class="summary__header document-section__header">{{title}}</h1>
            </header>
            <p class="summary__text">{{{summary}}}</p>
        </section>
        <section class="follow document-section">
            <header>
                <h2 class="follow__header document-section__header">Follow me on</h2>
            </header>
            <ul class="follow__list">
                {{#each socialNetworks}}
                    <li class="follow__list-item social-network">
                        <span class="social-network__record">
                            <strong class="social-network__title">{{this.title}}:</strong>
                            <a class="social-network__login" href="{{this.url}}" target="_blank">
                                {{this.login}}
                            </a>
                        </span>
                    </li>
                {{/each}}
            </ul>
        </section>
    </body>
</html>
