<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{{title}}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="google-site-verification" content="R71LZgXmhewXH4QOZl3IzTLY7iM7b2cq_rs7IQZIdzY" />

        <link rel="stylesheet" href="assets/styles.css">
        <link rel="shortcut icon" href="assets/favicon.ico" type="image/vnd.microsoft.icon">
    </head>
    <body class="page">
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-41019930-2', 'auto');
            ga('send', 'pageview');
        </script>

        <!-- Yandex.Metrika counter -->
        <script type="text/javascript">
            (function (d, w, c) {
                (w[c] = w[c] || []).push(function() {
                    try {
                        w.yaCounter32861550 = new Ya.Metrika({
                            id:32861550,
                            clickmap:true,
                            trackLinks:true,
                            accurateTrackBounce:true
                        });
                    } catch(e) { }
                });

                var n = d.getElementsByTagName("script")[0],
                        s = d.createElement("script"),
                        f = function () { n.parentNode.insertBefore(s, n); };
                s.type = "text/javascript";
                s.async = true;
                s.src = "https://mc.yandex.ru/metrika/watch.js";

                if (w.opera == "[object Opera]") {
                    d.addEventListener("DOMContentLoaded", f, false);
                } else { f(); }
            })(document, window, "yandex_metrika_callbacks");
        </script>
        <noscript><div><img src="https://mc.yandex.ru/watch/32861550" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
        <!-- /Yandex.Metrika counter -->

        <section class="summary document-section">
            <header>
                <h1 class="summary__header document-section__header">{{title}}</h1>
            </header>
            <p class="summary__text">{{{summary}}}</p>
        </section>
        <section class="follow document-section">
            <header>
                <h2 class="follow__header document-section__header">Follow me on</h2>
            </header>
            <ul class="follow__list">
                {{#each socialNetworks}}
                    <li class="follow__list-item social-network">
                        <span class="social-network__record">
                            <strong class="social-network__title">{{this.title}}:</strong>
                            <a class="social-network__login" href="{{this.url}}" target="_blank">
                                {{this.login}}
                            </a>
                        </span>
                    </li>
                {{/each}}
            </ul>
        </section>
    </body>
</html>
